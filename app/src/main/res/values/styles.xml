<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ToolbarMenuTheme" parent="AppTheme">
        <item name="actionMenuTextColor">#007AFF</item>
        <item name="android:actionMenuTextColor">#007AFF</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_15</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/toolbar_font_size</item>
    </style>

    <style name="AppBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppBarcodeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="actionBarStyle">@style/BarCodeActionBar</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="BarCodeActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/BarCodeActionBarTitleTextStyle</item>
    </style>

    <style name="BarCodeActionBarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_font_size</item>
    </style>
</resources>